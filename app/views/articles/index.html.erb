<div class="center">
  <h1>All Articles</h1>
</div>
<%= link_to 'Add a new article' , new_article_path, class: "btn-primary btn"%>
<div align = "center">
  <%= will_paginate %>
</div>
</br></br>
  <% @articles.each do |article| %>
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <div class="well well-lg">
        <div class="img-circle article-user-img">
          <%= link_to (gravatar_for article.user) , user_path(article.user)%>
        </div>
        <div class="article-title">
          <%= link_to article.title, article_path(article) %>
        </div>
        <div class="well article-body">
          <%= truncate(article.description, length: 100) %>
        </div>
        <div>
          <p style="float: left">
            Created by :
            <%=
              if article.user
                article.user.username
              else
                'Unknown'
              end
            %>
            <br>
          </p>
          <p style="float: right">
            Created at : <%= time_ago_in_words(article.created_at) %>
          </p>
        </div><br>
        <% if current_user == article.user %>
        <div class="article-actions">
          <%= link_to 'Edit', edit_article_path(article), class: "btn btn-primary"%>
          <%= link_to 'Delete this article', article_path(article), method: :delete, class: "btn btn-danger"%>
        </div>
        <% elsif logged_in? && current_user.admin? %>
        <div class="article-actions">
          <!-- <%= link_to 'Edit', edit_article_path(article), class: "btn btn-primary"%> -->
          <%= link_to 'Delete this article', article_path(article), method: :delete, class: "btn btn-danger"%>
        </div>
        <% end %>
      </div>
    </div>
  </div>
  <% end %>
<div align="center">
  <%= will_paginate %>
</div>
