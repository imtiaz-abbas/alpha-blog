<h2 align="center"> <%= @article.title %></h2>
<div class="well col-xs-8 col-xs-offset-2">
  <h4  align = "center">
    <strong>Description: </strong>
  </h4>
  <hr>
  <p>
    <%= @article.description %>
  </p>
  <div class="article-actions">
    <%= link_to 'Back to articles', articles_path, class: "btn btn-primary"%>
    <%= link_to 'Edit this article', edit_article_path(@article), class: "btn btn-success"%>
    <%= link_to 'Delete this article', article_path(@article), method: :delete, class: "btn btn-danger"%>
  </div>
</div>
