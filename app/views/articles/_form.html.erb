<% if @article.errors.any? %>
  <% @article.errors.full_messages.each do |message| %>
    <ul>
      <li> <%= message %> </li>
    </ul>
  <% end %>
<% end %>


<p>
<%= form_for @article do |f| %>
<%= f.label :title %><br>
<%= f.text_field :title %><br><br>
<%= f.label :description %><br>
<%= f.text_area :description %>
</p>
<p>
  <%= f.submit %>
</p>
<% end %>
<%= link_to 'Back to articles', articles_path%>
