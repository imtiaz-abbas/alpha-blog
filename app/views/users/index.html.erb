<h1>Users</h1>
<%= will_paginate %>
<% @users.each do |user| %>
  <div class="row" align = "center">
    <div class="well center" style = "width : 50%">
      <div class="img-circle" style = "float:left, height:120;">
        <%= link_to (gravatar_for user) , user_path(user)%>
      </div>
      <span><%=link_to user.username, user_path(user) %></span><br>
      <span><%= user.email %></span>
    </div>
  </div>

<% end %>


<%= will_paginate %>
