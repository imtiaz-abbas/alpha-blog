<br>
<div align="center">
  <h1>Users</h1>
</div>
<%= will_paginate %>
<% @users.each do |user| %>
  <div class="row">
    <div class="" style = "width : 30%">
      <div class="img-circle" style = "float:left, height:100%;">
        <%= link_to (gravatar_for user) , user_path(user)%>
      </div>
      <span style = "float: left"><%=link_to user.username, user_path(user) %></span><br>
      <span style = "float: left"><%= user.email %></span>
      <% if logged_in? && current_user.admin?%>
      <div style = "float: right">
        <%= link_to 'Delete User', user_path(user), method: :delete, class: "edit-btn btn btn-danger" if !user.admin?%>
      </div>
      <% end %>
    </div>
  </div>

<% end %>


<%= will_paginate %>
